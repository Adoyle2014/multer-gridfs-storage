{
  "root": true,
  "env": {
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": [
      "warn"
    ]
  },
  "complexity": [
    2,
    10
  ],
  "max-statements": [
    2,
    30
  ],
  "globals": {
    "Promise": true,
    "Symbol": true
  }
}
